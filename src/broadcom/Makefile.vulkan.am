# Due to a what seems like a autoconf bug, we must ensure that the genaration
# rules must be outside of any AM_CONDITIONALs. Otherwise they will be commented
# out and we'll fail at `make dist'
vulkan_api_xml = $(top_srcdir)/src/vulkan/registry/vk.xml

vulkan/bcmv_entrypoints.c: vulkan/bcmv_entrypoints_gen.py \
			  vulkan/bcmv_extensions.py $(vulkan_api_xml)
	$(MKDIR_GEN)
	$(AM_V_GEN)$(PYTHON2) $(srcdir)/vulkan/bcmv_entrypoints_gen.py \
		--xml $(vulkan_api_xml) --outdir $(builddir)/vulkan
vulkan/bcmv_entrypoints.h: vulkan/bcmv_entrypoints.c

vulkan/bcmv_extensions.c: vulkan/bcmv_extensions.py $(vulkan_api_xml)
	$(MKDIR_GEN)
	$(AM_V_GEN)$(PYTHON2) $(srcdir)/vulkan/bcmv_extensions.py \
		--xml $(vulkan_api_xml) --out $@

BUILT_SOURCES += $(VULKAN_GENERATED_FILES)
CLEANFILES += \
	$(VULKAN_GENERATED_FILES) \
	vulkan/dev_icd.json \
	vulkan/broadcom_icd.@host_cpu@.json

EXTRA_DIST += \
	$(top_srcdir)/include/vulkan/vk_icd.h \
	vulkan/bcmv_entrypoints_gen.py \
	vulkan/bcmv_extensions.py \
	vulkan/bcmv_icd.py \
	vulkan/TODO

vulkan/dev_icd.json : vulkan/bcmv_extensions.py vulkan/bcmv_icd.py
	$(AM_V_GEN)$(PYTHON2) $(srcdir)/vulkan/bcmv_icd.py \
		--lib-path="${abs_top_builddir}/${LIB_DIR}" --out $@

vulkan/broadcom_icd.@host_cpu@.json : vulkan/bcmv_extensions.py vulkan/bcmv_icd.py
	$(AM_V_GEN)$(PYTHON2) $(srcdir)/vulkan/bcmv_icd.py \
		--lib-path="${libdir}" --out $@

